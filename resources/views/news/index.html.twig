{% extends 'base.html.twig' %}
{% block content %}
    <div class="padding">
        <div class="container" id="news">
            <h2 class="text-center mb-5">Les news recentes</h2>
            <section id="gallery">
                <div class="container">
                    <div class="row">
                        {% for new in news %}
                            <div class="col-lg-4 mb-4">
                                <div class="card">
                                    <img src="https://images.unsplash.com/photo-1477862096227-3a1bb3b08330?ixlib=rb-1.2.1&auto=format&fit=crop&w=700&q=60" alt="" class="card-img-top">
                                    <div class="card-body">
                                        <h5 class="card-title">{{ new.getTitle() }}</h5>
                                        <p class="card-text">
                                            {{ new.getSynopsis() }}
                                        </p>
                                        <a href="news_details?id={{ new.getId() }}" class="btn btn-outline-success btn-sm">Read More</a>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </section>
        </div>
    </div>
{% endblock %}

