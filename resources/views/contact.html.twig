{% extends 'base.html.twig' %}
{% block title %}
    Contact
{% endblock %}
{% block content %}
    <div class="container">
        <div class="row">
            <div class="col">
                <div class="p-3 py-5">
                    <div class="d-flex justify-content-center align-items-center mb-3">
                        <h1 class="text-right">Contact Us</h1>
                    </div>
                    <div class="row mt-2">
                        <div class="col d-flex">
                            <div class=""><i class="fa fa-map-marker"></i> Address: </div>
                            <div class="mx-5">
                                {{ address }}
                            </div>
                        </div>
                        </div>
                    <div class="row mt-3">
                        <div class="col-md-12 my-2 d-flex">
                            <div class=""><i class="fa fa-mobile-phone"></i> Mobile Number: </div>
                            <div class="mx-5">
                                {{ mobile }}
                            </div>
                        </div>
                        <div class="col-md-12 my-2 d-flex">
                            <div ><i class="fa fa-google"></i>Email</div>
                            <div class="mx-5">
                                {{ email }}
                            </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
{% endblock %}