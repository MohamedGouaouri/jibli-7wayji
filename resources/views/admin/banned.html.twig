
<div>
    <div>
        <h1>All Clients</h1>
    </div>
    <div>
        <label for="search-user"></label>
        <input type="text" placeholder="search" id="search-user" class="form-control-lg my-2">
    </div>

    <table id="clients"
           class="table table-striped table-bordered table-sm"
{#           cellspacing="0"#}
{#           width="100%"#}
           data-pagination="true"
           data-search="true"
    >
        <thead>
        <tr>
            <th class="th-sm">Id
            </th>
            <th class="th-sm">Name
            </th>
            <th class="th-sm">Family name
            </th>
            <th class="th-sm">Email
            </th>
            <th class="th-sm">Phone number
            </th>
            <th class="th-sm">Address
            </th>
            <th class="th-sm">Actions
            </th>
        </tr>
        </thead>
        <tbody>
        {% for user in banned_users %}
            <tr data-user-id="{{ user.getUserId() }}">
                <td>{{ loop.index }}</td>
                <td>{{ user.getName() }}</td>
                <td>{{ user.getFamilyName() }}</td>
                <td>{{ user.getEmail() }}</td>
                <td>{{ user.getPhoneNumber() }}</td>
                <td>{{ user.getAddress() }}</td>
                <td>
                    <div class="d-flex flex-row align-items-baseline">
                        <div>
                            <button class="btn btn-green unban-user" data-user-id="{{ user.getUserId() }}">Unban</button>
                        </div>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
        <tfoot>
        </tfoot>
    </table>
</div>