{% extends 'user_base.html.twig' %}
{% block title %}
    Signalement
{% endblock %}
{% block styles %}
{% endblock %}
{% block content %}
    <div class="container rounded bg-white mt-5 mb-5 profile">
        <div class="row">
            <div class="col-md-9 col-center">
                <div class="alert alert-success show fade" role="alert" id="cert-success-alert" style="display: none">

                </div>
                <div class="alert alert-danger show fade" role="alert" id="cert-success-alert" style="display: none">

                </div>
                <form class="p-3 py-5" id="signal-form">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h1 class="text-center">Pour quoi signaler ?</h1>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-12 my-2">
                            <label for="message">Message</label><textarea name="message" id="message" class="form-control" maxlength="255" rows="10">
                            </textarea>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary my-1 form-control">Submit</button>
                </form>
            </div>

        </div>
    </div>
{% endblock %}