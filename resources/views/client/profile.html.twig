{% extends 'user_base.html.twig' %}

{% block styles %}
    <link href="{{ 'resources/css/profile.css' }}" rel="stylesheet">
{% endblock %}

{% block title %}
    profile {{ user.getName() }}
{% endblock %}
{% block content %}
    <div class="container rounded bg-white mt-5 mb-5 profile">
        <div class="alert alert-success show fade" role="alert" style="display: none">

        </div>
        <div class="alert alert-danger show fade" role="alert" style="display: none">

        </div>
        <div class="row">

            <div class="col-md-3 border-right">
                <div class="d-flex flex-column align-items-center text-center p-3 py-5"><img class="rounded-circle mt-5" width="150px" src="https://st3.depositphotos.com/15648834/17930/v/600/depositphotos_179308454-stock-illustration-unknown-person-silhouette-glasses-profile.jpg" alt="">
                    <span class="font-weight-bold">{{ user.getName() }}</span>
                </div>
            </div>
            <div class="col-md-9 border-right">
                <div class="p-3 py-5">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h4 class="text-right">Profile Settings</h4>
                    </div>
                    <div class="row mt-2">
                        <div class="col-md-6"><label class="labels">Name</label><input type="text" class="form-control" placeholder="first name" value="{{ user.getName() }}" readonly></div>
                        <div class="col-md-6"><label class="labels">Surname</label><input type="text" class="form-control" value="{{ user.getFamilyName() }}" placeholder="Family name" readonly></div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-12 my-2"><label class="labels">Mobile Number</label><input type="text" class="form-control updated"  value="{{ user.getPhoneNumber() }}" id="phone-field" readonly></div>
                        <div class="col-md-12 my-2"><label class="labels">Address Line 1</label><input type="text" class="form-control updated" placeholder="enter address line 1" value="{{ user.getAddress() }}" readonly id="address-field"></div>
                        <div class="col-md-12 my-2"><label class="labels">Email ID</label><input type="text" class="form-control updated" value="{{ user.getEmail() }}" readonly id="email-field"></div>
                    </div>
                    <div class="mt-5 text-center">
                        <button class="btn btn-primary profile-button" type="button" id="enable-update-profile">Update</button>
                        <button class="btn btn-green profile-button" type="button" id="submit-update-profile" style="display: none;">Submit</button>
                        <button class="btn btn-danger profile-button" type="button" id="cancel-update-profile" style="display: none;">Cancel</button>
                    </div>
                </div>
            </div>

        </div>
    </div>
{% endblock %}